<%- include('header', { pageTitle: 'Rate Your Stay | Vacay' }) %>

<div class="propBackground">
    <h3 class="p-2" style="padding-top: 30px; margin-left: 70px; font-size: 50px; margin-bottom: 20px;">Rate Your Stay</h3>
    <div class="container mt-0">
        <div class="card mb-3" style="border-radius: 20px; overflow: hidden; box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);">
            <div class="row g-0">
                <div class="col-md-4">
                    <% if (propertyHost.images && propertyHost.images.length > 0 && propertyHost.images[0].contentType && propertyHost.images[0].data) { %>
                        <img src="data:<%= propertyHost.images[0].contentType %>;base64,<%= propertyHost.images[0].data.toString('base64') %>"
                            class="img-fluid rounded-start" alt="Property Image" style="height: 100%; width: 100%; object-fit: cover;">
                    <% } else { %>
                        <div class="d-flex align-items-center justify-content-center h-100">
                            <p class="text-muted">No Image</p>
                        </div>
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body" style="margin-left: 20px">
                        <h2 class="card-title"><%= propertyHost.name %></h2>
                        <p class="card-text"><strong>Total Guest:</strong> <%= propertyHost.guestNum %> Guest</p>
                        <p class="card-text"><strong>Price:</strong> RM <%= propertyHost.price %>/Night</p>
                        <p class="card-text"><strong>Location:</strong> <%= propertyHost.address %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex flex-column align-items-center justify-content-center mt-5">
        <form action="/ratings/<%= propertyHost._id %>" method="POST" style="width:50%">
            <input type="hidden" name="propertyId" value="<%= propertyHost._id %>">
            <input type="hidden" name="userId" value="<%= userId %>"> <!-- Add this line -->
            <div class="form-group" style="text-align: center;">
                <h3>How Would You Rate Your Stay Here?</h3>
                <div class="star-rating">
                    <input type="radio" id="5-stars" name="rating" value="5" />
                    <label for="5-stars" class="star">&#9733;</label>
                    <input type="radio" id="4-stars" name="rating" value="4" />
                    <label for="4-stars" class="star">&#9733;</label>
                    <input type="radio" id="3-stars" name="rating" value="3" />
                    <label for="3-stars" class="star">&#9733;</label>
                    <input type="radio" id="2-stars" name="rating" value="2" />
                    <label for="2-stars" class="star">&#9733;</label>
                    <input type="radio" id="1-star" name="rating" value="1" />
                    <label for="1-star" class="star">&#9733;</label>
                </div>
            </div>
                <h3 style="text-align: center;">Do You Have Any Feedback On This Property?</h3>
                <textarea class="form-control mb-5" id="review" name="review" placeholder="Your Feedback"></textarea>
            </div>
            <div class="text-center">
                <button type="submit" class="viewBtn mb-5" style="font-size: medium;">Submit</button>
            </div>
        </form>
    </div>        
</div>

</div>

<%- include('footer') %>
